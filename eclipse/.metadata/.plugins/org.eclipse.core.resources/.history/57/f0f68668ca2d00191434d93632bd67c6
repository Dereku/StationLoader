package net.modificationstation.stationloader.client.minecraft.gui;

import net.minecraft.src.GuiButton;
import net.minecraft.src.GuiMainMenu;
import net.modificationstation.stationloader.common.StationLoader;

public class GuiMainMenuSL extends GuiMainMenu{
    
    public void drawScreen(int i, int j, float f) {
        controlList.add(new GuiButton(1, width / 2, height / 4 - 56, ">"));
        super.drawScreen(i, j, f);
        drawString(fontRenderer, "StationLoader version 0.0.1", 2, 12, 0x505050);
        drawString(fontRenderer, "(" + StationLoader.loadedMods.size() + (StationLoader.loadedMods.size() == 1 ? " mod is" : " mods are") + " loaded)", 2, 22, 0x505050);
    }
}
