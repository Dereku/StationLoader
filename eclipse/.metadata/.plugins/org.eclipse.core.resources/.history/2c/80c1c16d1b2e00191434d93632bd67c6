package net.rek.oldmainmenu;

import net.minecraft.client.Minecraft;
import net.modificationstation.stationloader.common.StationLoader;
import net.modificationstation.stationloader.common.util.Mod;
import net.modificationstation.stationloader.common.util.Mod.EventHandler;
import net.modificationstation.stationloader.events.common.mods.SLInitializationEvent;
import net.rek.oldmainmenu.eventlisteners.GuiMainMenuListener;

@Mod(name = "Old Logo", modid = "oldlogo")
public class OldLogoCore {
    @EventHandler
    public static void onInit(SLInitializationEvent event) {
        mc = event.getMinecraft();
        StationLoader.addEventListener(GuiMainMenuListener.class);
    }
    public static Minecraft mc;
}
