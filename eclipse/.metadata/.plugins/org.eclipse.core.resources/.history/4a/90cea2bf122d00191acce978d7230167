package net.modificationstation.stationloader.loaders;

import java.applet.Applet;
import java.lang.reflect.Method;

public class SLReloader {
    public static void relaunchMC(String mcargs[]) {
        args = mcargs;
        try {
            ClassLoader stationLoader = new StationClassLoader();
            Class<?> minecraft = Class.forName("net.minecraft.client.Minecraft", false, stationLoader);
            Method method = minecraft.getDeclaredMethod("relaunch");
            method.invoke(null);
        } catch (Exception e) {e.printStackTrace();}
    }
    public static void relaunchApplet(Applet minecraftApplet) {
        try {
            ClassLoader stationLoader = new StationClassLoader();
            Class<?> minecraft = Class.forName("net.minecraft.client.MinecraftApplet", false, stationLoader);
            Method method = minecraft.getDeclaredMethod("relaunch");
            method.invoke(minecraftApplet);
        } catch (Exception e) {e.printStackTrace();}
    }
    public static final ClassLoader slClassloader = 
    public static String args[];
}
