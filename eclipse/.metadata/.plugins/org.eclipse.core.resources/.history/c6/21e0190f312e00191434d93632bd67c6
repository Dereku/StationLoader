package net.modificationstation.stationloader.client.minecraft.gui;

import net.minecraft.client.Minecraft;
import net.minecraft.src.GuiScreen;
import net.minecraft.src.Timer;

public class GuiScreenLoading extends GuiScreen{
    public GuiScreenLoading(Minecraft minecraft, Timer timer) {
        super();
        mc = minecraft;
        tmr = timer;
        new ThreadLoadingScreen(this).start();
    }
    @Override
    public void drawScreen(int i, int j, float f) {
        drawString(mc.fontRenderer, "StationLoader", 50, 50, 0xffffff);
    }
    public Minecraft mc;
    public Timer tmr;
}
